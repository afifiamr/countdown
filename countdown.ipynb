        "import time\n",
        "seconds=int(input(\"please enter the time\"))\n",
        "def countdown(t):\n",
        "  while t >= 0:\n",
        "    mins , sec = divmod(t,60)\n",
        "    timeformat = '{}:{}' .format(mins, sec)\n",
        "    print(\"\\r\",timeformat,end =\"\")\n",
        "    time.sleep(1)\n",
        "    t = t-1\n",
        "  print(\"\\nfire in the hole\")\n",
        "\n",
        "\n",
        "countdown(seconds)"
      ]
